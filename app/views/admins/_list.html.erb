<article id="employee-list" class="row">
  <input type="hidden" id="user_list_count" value="<%=@admin_counts %>">
  <div class="col-12">
    <table class="table table-striped table-hover">
      <colgroup>
        <col class="d-none d-lg-table-cell" />
        <col />
        <col />
      </colgroup>
      <thead class="thead-default">
      <tr>
        <th class="d-none d-lg-table-cell di-title"><%=t(:increment_number) %></th>
        <th><%=t(:user_name) %></th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% unless @admins.empty? %>
        <% @admins.each_with_index do |admin, index| %>
          <tr<% if @admin.id == admin.id %> class="table-primary"<% end %>>
            <td class="d-none d-lg-table-cell user-index">
              <%
                if params[:page].present?
                  mm=(params[:page].to_i-1)
                else
                  mm=0
                end
              %>
              <%=@admin_count-(params[:per_page].to_i*mm)-index %>
            </td>
            <td>
              <div style="display:block;width:100px;white-space:nowrap;text-overflow:ellipsis">
                <%=link_to admin.name,admin_admin_path(admin) %>
              </div>
            </td>
            <td>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4"><%=t(:no_data) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</article>
