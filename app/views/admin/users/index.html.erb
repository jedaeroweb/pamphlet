<div class="col-12">
	<h2 class="float-left hidden-title"><%= t(:contact_list) %></h2>
	<div class="float-right">
		<p class="summary">
			<span id="list_count" style="display:none"><%=@user_count %></span>
			<%=raw t(:there_are_n_users,count: @user_count) %>
		</p>
	</div>
</div>
<article class="col-12">
	<table id="prepare_list" class="table table-striped table-hover">
	<colgroup>
		<col width="100px" />
		<col />
		<col width="70px" />
		<col width="130px" />
	</colgroup>
		<thead class="thead-default">
			<tr>
				<th>이름</th>
				<th>제목</th>
				<th>조회</th>
				<th>등록일</th>
			</tr>
		</thead>
		<tbody>
			<tr class="none">
				<td><p class="sl_name"></p></td>
				<td><p><a class="sl_show_link" href="show.php"></a></p></td>
				<td class="sl_right"><p class="sl_count"></p></td>
				<td class="sl_right"><p class="sl_registered_date"></p></td>
			</tr>
			<% unless @user_count.zero? %>
			<% @users.each do |user| %>
			<tr>
				<td><p class="sl_name"><%= user.id %></p></td>
				<td><p><%= link_to user.nickname, admin_user_path(user)  %></p></td>
				<td class="sl_right"></td>
				<td class="sl_right"><p class="sl_registered_date"><%=user.created_at.to_date %></p></td>
			</tr>
			<% end %>			
			<% else %>
			<tr>
				<td colspan="4"><p>글이 없습니다.</p></td>
			</tr>
			<% end %>
</table>
<div id="sl_bottom_menu">
	<%= link_to t(:add), new_admin_contact_path, :class => "btn btn-primary" %>
	<%= paginate @users %>
</div>
</article>
