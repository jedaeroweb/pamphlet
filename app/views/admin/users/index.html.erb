<div class="col-12">
	<h2 class="float-left hidden-title"><%= t(:contact_list) %></h2>
	<div class="float-right">
		<p class="summary">
			<span id="list_count" style="display:none"><%=@user_count %></span>
			<%=raw t(:there_are_n_users,count: @user_count) %>
		</p>
	</div>
</div>
<article class="col-12">
	<table id="prepare_list" class="table table-striped table-hover">
	<colgroup>
		<col width="100px" />
		<col />
		<col width="70px" />
		<col width="210px" />
		<% if can?(:update, User) || can?(:delete, User) %>
			<col<%=manage_width(User) %>>
		<% end %>
	</colgroup>
		<thead class="thead-default">
			<tr>
				<th>고객번호</th>
				<th>이름</th>
				<th>전화번호</th>
				<th>등록일</th>
				<th><%=t(:manage) %></th>
			</tr>
		</thead>
		<tbody>
			<% unless @user_count.zero? %>
			<% @users.each do |user| %>
			<tr>
				<td><%= user.id %></td>
				<td><%= link_to user.nickname, admin_user_path(user)  %></td>
				<td><%= link_to user.phone, admin_user_path(user)  %></td>
				<td><%= I18n.l user.created_at.to_date, :format => :long %></td>
				<% if can?(:update, user) or can?(:delete, user) %>
					<td class="text-right">
						<% if can? :update, user %>
							<%= link_to edit_admin_user_path(user), :class => "btn btn-secondary" do %>
								<%= t(:edit) %>
							<% end %>
						<% end %>
						<% if can? :delete, user %>
							<%= link_to admin_user_path(user), :method => :delete, :data => { :confirm => t(:delete_confirm) }, :class => "btn btn-danger" do %>
								<%= t(:delete) %>
							<% end %>
						<% end %>
					</td>
				<% end %>
			</tr>
			<% end %>			
			<% else %>
			<tr>
				<td colspan="4"><p>글이 없습니다.</p></td>
			</tr>
			<% end %>
</table>
<div id="sl_bottom_menu">
	<%= link_to t(:add), new_admin_contact_path, :class => "btn btn-primary" %>
	<%= paginate @users %>
</div>
</article>
