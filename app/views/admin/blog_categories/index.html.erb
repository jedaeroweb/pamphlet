<article id="blog-categories" class="col-12">
  <h2 class="float-left "><%= t(:blog_category_list) %></h2>
  <div class="float-right">
    <p class="summary">
      <span id="list_count" style="display:none"><%= @blog_category_count %></span>
      <%= raw t(:there_are_n_blog_categories, count: @blog_category_count) %>
    </p>
  </div>
  <table id="prepare_list" class="table table-striped table-hover">
    <colgroup>
      <col style="width:120px">
      <col>
      <col>
      <col style="width:200px">
      <% if can?(:update, BlogCategory) || can?(:delete, BlogCategory) %>
        <col<%= manage_width(BlogCategory) %>>
      <% end %>
    </colgroup>
    <thead class="thead-default">
    <tr>
      <th class="text-center"><%= t(:enable, scope: [:activerecord, :attributes, :blog_category]) %></th>
      <th><%= t(:title, scope: [:activerecord, :attributes, :blog_category]) %></th>
      <th class="text-right"><%= t(:blogs_count, scope: [:activerecord, :attributes, :blog_category]) %></th>
      <th class="text-right"><%= t(:updated_at, scope: [:activerecord, :attributes, :blog_category]) %></th>
      <% if can?(:update, BlogCategory) || can?(:delete, BlogCategory) %>
        <th class="text-center"><%= t(:manage) %></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% unless @blog_category_count.zero? %>
      <% @blog_categories.each_with_index do |blog_category, index| %>
        <tr>
          <td>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="blog_category_display<%= index %>" value="<%= blog_category.id %>"
                     <% if blog_category.enable %> checked
              <% end %>>
              <label class="custom-control-label" for="blog_category_display<%= index %>">
                <% if blog_category.enable %> <%= t(:display) %>
                <% else %><%= t(:hidden) %>
                <% end %> </label>
            </div>
          </td>
          <td><%= link_to blog_category.title, admin_blog_category_path(blog_category) %></td>
          <td class="text-right">
            <% if blog_category.blogs_count.zero? %>
              <%= t(:none) %>
            <% else %>
              <%= link_to blog_category.blogs_count.to_s + 'ê°œ', admin_blogs_path(:blog_category_id => blog_category) %>
            <% end %>
          </td>
          <td class="text-right"><%= I18n.l blog_category.created_at.to_date, :format => :long %></td>
          <% if can?(:update, blog_category) or can?(:delete, blog_category) %>
            <td class="text-right">
              <% if can? :update, blog_category %>
                <%= link_to edit_admin_blog_category_path(blog_category), :class => "btn btn-secondary" do %>
                  <%= t(:edit) %>
                <% end %>
              <% end %>
              <% if can? :delete, blog_category %>
                <%= link_to admin_blog_category_path(blog_category), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) }, :class => "btn btn-danger" do %>
                  <%= t(:delete) %>
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="8" class="text-center"><%= t(:no_data) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @blog_categories %>
  <% if can? :create, BlogCategory %>
  <%= link_to t(:add), new_admin_blog_category_path, :class => "btn btn-primary" %>
  <% end  %>
</article>
