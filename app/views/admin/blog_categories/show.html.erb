<section id="show-blog-category" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h3 class="card-header"><%=@blog_category.title %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:blogs_count, scope: [:activerecord, :attributes, :blog_category]) %></dt>
            <dd><%=  @blog_category.blogs_count.to_s + 'ê°œ' %></dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :blog_category]) %></dt>
            <dd><%= I18n.l @blog_category.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :blog_category]) %></dt>
            <dd><%= I18n.l @blog_category.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_blog_categories_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_blog_category_path(@blog_category), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_blog_category_path(@blog_category), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
