<div class="col-12">
  <h2 class="float-left hidden-title"><%= t(:history_list) %></h2>
  <div class="float-right">
    <p class="summary">
      <span id="list_count" style="display:none"><%=@history_count %></span>
      <%=raw t(:there_are_n_histories,count: @history_count) %>
    </p>
  </div>
</div>
<article class="col-12">
  <table id="prepare_list" class="table table-striped table-hover">
    <colgroup>
      <col style="width:120px">
      <col>
      <col>
      <col style="width:210px">
      <% if can?(:update, History) || can?(:delete, History) %>
        <col<%=manage_width(History) %>>
      <% end %>
    </colgroup>
    <thead class="thead-default">
    <tr>
      <th class="text-center"><%= t(:enable,scope:[:activerecord,:attributes,:history]) %></th>
      <th><%= t(:title,scope:[:activerecord,:attributes,:history]) %></th>
      <th><%= t(:count,scope:[:activerecord,:attributes,:history]) %></th>
      <th class="text-right"><%= t(:created_at,scope:[:activerecord,:attributes,:history]) %></th>
      <% if can?(:update, History) || can?(:delete, History) %>
        <th class="text-center"><%= t(:manage) %></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% unless @history_count.zero? %>
      <% @histories.each_with_index do |history,index| %>
        <tr>
          <td>
            <div class="custom-control custom-switch">
              <input type="checkbox" class="custom-control-input" id="notice_display<%=index %>" value="<%=history.id %>" <% if history.enable %> checked<% end %>>
              <label class="custom-control-label" for="notice_display<%=index %>"><% if history.enable %> <%=t(:display) %><% else %><%=t(:hidden) %><% end %> </label>
            </div>
          </td>
          <td><%= link_to history.title,admin_history_path(history) %></td>
          <td class="text-right"></td>
          <td class="text-right"><%= I18n.l history.created_at.to_date, :format => :long %></td>
          <% if can?(:update, history) or can?(:delete, history) %>
            <td class="text-right">
              <% if can? :update, history %>
                <%= link_to edit_admin_history_path(history), :class => "btn btn-secondary" do %>
                  <%= t(:edit) %>
                <% end %>
              <% end %>
              <% if can? :delete, history %>
                <%= link_to admin_history_path(history), :method => :delete, :data => { :confirm => t(:delete_confirm) }, :class => "btn btn-danger" do %>
                  <%= t(:delete) %>
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4" class="text-center"><%= t(:no_data) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <div class="pagination justify-content-center">
    <%= paginate @histories %>
  </div>
  <%= link_to t(:add), new_admin_history_path, :class => "btn btn-primary" %>
</article>
