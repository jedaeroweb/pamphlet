<%= form_with(model: [:admin, notice], local: true, data: { turbo_frame: "_top" }) do |form| %>
  <% if notice.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(notice.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
      <ul>
        <% notice.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :user_id, "사용자" %>
        <%= form.text_field :user_nickname,
                            class: 'form-control',
                            readonly: true,
                            data: {
                              "user-selector-target": "input",
                              "bs-toggle": "modal",
                              "bs-target": "#userSelectorModal"
                            } %>
        <%= form.hidden_field :user_id, data: { "user-selector-target": "hiddenInput" } %>
      </div>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, :class => 'form-control', :required => 'required' %>
      </div>
      <div class="form-group">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :enable %>
      <%= form.check_box :enable %>
    </div>
  </div>
  <div class="d-grid gap-2">
    <%= form.submit :class => "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>