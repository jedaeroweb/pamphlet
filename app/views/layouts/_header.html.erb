<header>
	<div class="container">
		<div class="row">
			<h1 class="col-12 col-lg-3 col-xl-4"><%=link_to raw('<span class="red">I</span>PARK<span class="small">영통역</span>'),root_path %></h1>
			<% if user_signed_in? %>
				<ul id="top_menu">
					<li><%= link_to current_user.nickname,edit_user_registration_path %><%= t(:welcome)%></li>
					<li><%= link_to t(:logout),destroy_user_session_path, method: 'delete' %></li>
				</ul>
			<% end %>
			<nav class="col-12 col-lg-9 col-xl-8">
				<ul class="nav nav-pills">
					<li role="presentation" class="dropdown <% if params[:controller]=='intro' || params[:controller]=='teams' || params[:controller]=='histories' || params[:controller]=='locations' %> active"<% end %>">
						<%= link_to '#', { class: 'dropdown-toggle d-flex align-items-center gap-2 main-menu',
															 role: "button",
															 'data-bs-toggle': "dropdown",
															 'aria-expanded': "false" } do %>
							<%=t('activerecord.models.intro') %> <span class="caret"></span>
						<% end %>
						<ul class="dropdown-menu">
							<li
								<% if current_page?(intro_index_path) %> class="active"
								<% end %>><%=link_to intro_index_path do %><%=t('activerecord.models.intro') %><% end %></li>
							<li
								<% if current_page?(locations_path) %> class="active"
								<% end %>><%=link_to locations_path do %><%=t('activerecord.models.location') %><% end %></li>
							<li
								<% if current_page?(histories_path) %> class="active"
								<% end %>><%=link_to histories_path do %><%=t('activerecord.models.history') %><% end %></li>
						</ul>
						</li>
						<li <% if params[:controller]=='contacts' %>class="active"<% end %>>
							<%=link_to new_contact_path,class:'main-menu' do %><%=t('activerecord.models.contact') %><% end %>
						</li>
						<li <% if params[:controller]=='blogs' %>class="active"<% end %>>
							<%=link_to blogs_path,class:'main-menu' do %><%=t('activerecord.models.blog') %><% end %>
						</li>
						<li <% if params[:controller]=='galleries' %>class="active"<% end %>>
							<%=link_to galleries_path,class:'main-menu' do %><%=t('activerecord.models.gallery') %><% end %>
						</li>

						<li <% if params[:controller]=='notices' %>class="active"<% end %>>
							<%=link_to notices_path,class:'main-menu' do %><%=t('activerecord.models.notice') %><% end %>
						</li>

					</ul>
			</nav>
		</div>
	</div>
</header>
