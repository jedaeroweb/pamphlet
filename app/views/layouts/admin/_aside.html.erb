<aside id="main-menu" class="col-12 col-md-2 col-xxl-1">
  <h1 class="col-12"><%= link_to t(:service_name), admin_path %></h1>
  <nav>
    <ul class="nav">

      <li class="nav-item
            <% if ['admin/products','admin/product_categories'].include?(params[:controller]) %> active
            <% end %>">
        <%= link_to admin_products_path, :class => "nav-link" do %>
          <i class="material-icons">shopping_cart</i><span><%= t(:product, scope: [:activerecord, :models]) %></span>
        <% end %>
      </li>
      <li class="nav-item
            <% if ['admin/orders'].include?(params[:controller]) %> active
            <% end %>">
        <%= link_to admin_orders_path, :class => "nav-link" do %>
          <i class="material-icons">shopping_cart</i><span><%= t(:order, scope: [:activerecord, :models]) %></span>
        <% end %>
      </li>
      <li class="nav-item
            <% if ['admin/users','admin/companies','admin/user_point_logs'].include?(params[:controller]) %> active
            <% end %>">
        <%= link_to admin_users_path, :class => "nav-link" do %>
          <i class="material-icons">person</i><span><%= t(:user, scope: [:activerecord, :models]) %></span>
        <% end %>
      </li>

      <li class="nav-item
            <% if ['admin/notices','admin/faq_categories','admin/contacts','admin/faqs','admin/reviews','admin/reservations','admin/questions','admin/answers'].include?(params[:controller]) %> active
            <% end %>">
        <%= link_to admin_notices_path, :class => "nav-link" do %>
          <i class="material-icons">people</i><span><%= t(:menu_community) %></span>
        <% end %>
      </li>

    </ul>
  </nav>
</aside>

