<% breadcrumb :notice,@notice %>
<div id="show-notice">
  <div class="row">
    <article class="col-12">
      <div class="sl_content_header">
        <h3><%= @notice.title %></h3>
        <p class="text-end"><%= t(:created_at, scope: [:activerecord, :attributes, :notice]) %> : <%= I18n.l @notice.created_at.to_date, :format => :long %></p>
      </div>
      <div class="sl_content_main">
        <div class="sl_content_text"><%=simple_format sanitize(@notice.content.to_s.gsub(/\n/, '<br />'), :tags => %w(br img a)) %></div>
      </div>
    </article>
  </div>
  <div class="row">
  </div>
  <div class="row">
    <div class="btn-group btn-group-lg col-12" role="group" style="margin-top:3rem">
      <%=link_to t(:link_list),notices_path,{class: 'btn btn-secondary btn-large btn-block'} %>
    </div>
  </div>
</div>
<% content_for :json_ld do %>
  <script type="application/ld+json">
    <%= raw(JSON.pretty_generate(json_ld_for_notice(@notice))) %>
  </script>
<% end %>
